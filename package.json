{
  "name": "css-frameworks-ca",
  "version": "0.0.1",
  "description": "A starting point for the CSS Frameworks CA project",
  "scripts": {
    "build": "if [ \"$NETLIFY\" = \"true\" ]; then npm run build:netlify; else npm run build:local; fi",
    "build:netlify": "npm run sass && npm run copy",
    "build:local": "sass src/scss:dist/css",
    "sass": "sass src/scss:dist/css",
    "copy": "mkdir -p build/ && rsync -av --exclude='build' --exclude='node_modules' . build/",
    "watch": "sass --watch src/scss:dist/css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoroffFEU/css-frameworks-ca.git"
  },
  "keywords": [
    "CSS",
    "Frameworks",
    "Bootstrap",
    "SCSS",
    "SASS"
  ],
  "author": "Tord Aake Larsson <lordaake@protonmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NoroffFEU/css-frameworks-ca/issues"
  },
  "homepage": "https://github.com/NoroffFEU/css-frameworks-ca#readme",
  "dependencies": {
    "bootstrap": "^5.3.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "sass": "^1.69.5",
    "shx": "^0.3.4"
  },
  "engines": {
    "node": ">=18.18.2",
    "npm": ">=10.1.0"
  }
}